---
import "../styles/Fonts.css";
import Header from "../components/layouts/Header.astro";
import Footer from "../components/layouts/Footer.astro";

interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content="Astro description" />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <meta name="generator" content={Astro.generator} />
        <title>{title}</title>
    </head>
    <body
        class="atkinson-regular-font relative pb-32 min-h-[100vh] h-full w-full items-center text-white"
    >
        <!-- Background Gradient -->
        <div
            class="fixed top-0 bottom-0 z-[-2] h-screen w-screen
            bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(14,165,233,0.5),rgba(255,255,255,0))]"
        >
        </div>
        <Header />
        <main class="mx-auto py-20 px-4 lg:px-0 xl:w-[76rem]">
            <slot />
        </main>
        <Footer />
    </body>
</html>
