---
interface Props{
    links: object
}

const { links } = Astro.props;

function fixName(l: any){
    const ll = l?.toString();
    
    if(ll === "ApiRepo")
        return "Api Repo"
    else if (ll === "ClientRepo")
        return "Client Repo"

    return ll;
}

---
<div
class=`flex flex-row gap-3 w-full items-center justify-center mt-10 mb-10 text-base md:text-lg`
>
{
    Object.entries(links || {}).map((link:any) => (
        <a
            class="py-2 rounded-full font-bold w-[12rem] md:w-full text-center 
                text-white bg-blue-900 hover:bg-blue-400 active:bg-blue-600"
            href={link[1]}
            target="_blank"
        >
            {
                fixName(link[0])
            }
        </a>
    ))
}
</div>